---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://www.linkedin.com/in/sebastiansimmons/" target="_blank">
				<span class="sr-only">My Linkedin</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32" astro-icon="social/linkedin"
					><path
						fill="currentColor"
						d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248c-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586c.173-.431.568-.878 1.232-.878c.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252c-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"				></path></svg
				>
			</a>
			<a href="https://github.com/sebastiansimmons" target="_blank">
				<span class="sr-only">Go to My GitHub repo</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32" astro-icon="social/github"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0 auto;
		width: 740px;
		max-width: calc(100% - 2em);
		padding: 1em 2em 0 2em;
		position: relative;
		z-index: 10;
		background: var(--accent);
		border-radius: 4px;
	}
	h2 {
		margin: 0;
		font-size: 1.2em;
		font-weight: 700;
		letter-spacing: -0.02em;
		white-space: nowrap;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: rgb(var(--background-body));
	}
	nav {
		display: flex;
		align-items: flex-end;
		justify-content: space-between;
		gap: 1em;
	}
	nav a {
		padding: 0.5em 1em;
		color: rgb(var(--background-body));
		text-decoration: none;
		font-weight: 600;
		border-radius: 4px 4px 0 0;
		position: relative;
	}
	nav a.active {
		text-decoration: none;
		background-color: rgb(var(--background-body));
		color: var(--accent);
	}
	nav a:hover {
		background-color: rgba(var(--background-body), 0.2);
	}
	nav a.active:hover {
		background-color: rgb(var(--background-body));
	}
	nav a.active::after {
		content: '';
		position: absolute;
		left: 0;
		right: 0;
		bottom: -4px;
		height: 4px;
		background-color: rgb(var(--background-body));
	}
	.internal-links {
		display: flex;
		gap: 0;
	}
	.social-links,
	.social-links a {
		display: flex;
		align-items: center;
		color: rgb(var(--background-body));
	}
	.social-links {
	}
	#theme-toggle {
		background: none;
		border: none;
		cursor: pointer;
		color: var(--accent-dark);
		display: flex;
		align-items: center;
		padding: 0;
		width: 24px;
		height: 24px;
	}
	#theme-toggle .moon {
		display: none;
	}
	#theme-toggle .sun {
		display: block;
	}
	:global(.dark) #theme-toggle .moon {
		display: block;
	}
	:global(.dark) #theme-toggle .sun {
		display: none;
	}
	@media (max-width: 720px) {
		header {
			width: calc(100% - 2em);
		}
		nav {
			flex-direction: column;
			align-items: center;
		}
		.social-links {
			display: none;
		}
		nav a.active::after {
			display: none;
		}
	}
</style>
